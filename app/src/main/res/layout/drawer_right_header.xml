<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#방 이름"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_room_name">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="검색하기"
            android:textColor="@color/white"
            android:background="?colorPrimary"
            app:drawableTopCompat="@drawable/ic_search_24"
            android:gravity="center_horizontal"
            android:padding="6dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_noti"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="알림"
            android:textColor="@color/white"
            android:background="?colorPrimary"
            app:drawableTopCompat="@drawable/ic_notifications_24"
            android:gravity="center_horizontal"
            android:padding="6dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_room_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="설정"
            android:textColor="@color/white"
            android:background="?colorPrimary"
            app:drawableTopCompat="@drawable/ic_room_setting_24"
            android:gravity="center_horizontal"
            android:padding="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/layout_buttons"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_find_friend"
            android:scaleType="center"
            android:background="@drawable/bg_circleimageview"
            android:backgroundTint="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멤버 초대하기"
            android:textSize="20sp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_below="@+id/layout_invite"
        android:layout_marginHorizontal="20dp"/>


</RelativeLayout>